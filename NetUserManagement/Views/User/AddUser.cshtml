@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card card-solid">
        <div class="card-body pb-0">
            <h2>Yeni kullanıcı ekleyin </h2>
            <form class="form-group" method="post">
                @Html.Label("Kullanıcı Adı")
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Username)
                <br />
                @Html.Label("Şifre")
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password)
                <br />
                @Html.Label("İsim")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
                <br />
                @Html.Label("Soyisim")
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Surname)d
                <br />
                @Html.Label("Mail Adresi")
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Mail)
                <br />
                @Html.Label("Telefon Numarası")
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PhoneNumber)
                <br />
                @if (ViewBag.UserRole == EntityLayer.Concrete.Role.Admin)
                {
                    @Html.Label("Kullanıcı rolü")
                    @Html.EnumDropDownListFor(x => x.Role, new { @class = "form-control" })
                }
                else
                {
                    @Html.Label("Kullanıcı rolü")
                    @Html.EnumDropDownListFor(x => x.Role, new { @class = "form-control", @disabled = "disabled", @readonly = "readonly" })
                }
                <br />

                <button class="btn btn-info">Kaydet</button>
                <a href="@Url.Action("Index", "User")" style="margin-left:10px">İptal</a>
            </form>

        </div>
    </div>
</div>
